{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "NxHeroku",
  "title": "@aloes/nx-heroku:deploy target generator",
  "type": "object",
  "properties": {
    "projectName": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Which project would you want to deploy on Heroku?"
    },
    "appNamePrefix": {
      "description": "Heroku app name prefix",
      "type": "string",
      "example": "identitifer"
    },
    "repositoryName": {
      "description": "Name of the GitHub repository, to create connection with the Heroku application",
      "type": "string",
      "example": "my-app"
    },
    "org": {
      "description": "Heroku team name and organization name in Github",
      "type": "string",
      "default": "my-org"
    }
  },
  "required": ["projectName"]
}
